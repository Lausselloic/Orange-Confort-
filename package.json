{
  "name": "orange-confort-plus",
  "description": "Enhance user experience on web sites",
  "version": "4.1.1",
  "homepage": "https://confort-plus.orange.com/",
  "author": "Orange SA",
  "config": {
    "author": "Orange SA",
    "description": "Enhance user experience on web sites"
  },
  "contributors": [
    "Orange SA"
  ],
  "license": "GPL-2.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orange-OpenSource/Orange-Confort-plus.git"
  },
  "bugs": {
    "url": "https://github.com/Orange-OpenSource/Orange-Confort-plus/issues"
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm:watch\" \"npm:browser:dist\"",
    "browser:dist": "servor dist/serveur/ testpage.html 9010 --browse --reload",
    "start:docs": "concurrently --kill-others \"npm:watch\" \"npm:browser:docs\"",
    "browser:docs": "servor docs/ index.html 9010 --browse --reload",
    "test": "",
    "prebuild": "shx rm -rf dist/{serveur,WebExtension}/*",
    "build": "npm run copy && concurrently \"npm:build:*\"",
    "postbuild": "terser dist/WebExtension/js/mask.js -o dist/WebExtension/js/mask.js -f \"preamble='/*\\n * $npm_package_name - version $npm_package_version - `date +%d-%m-%Y`\\n * $npm_package_config_description\\n * © 2014 - `date +%Y` $npm_package_config_author\\n*/'\"",
    "copy": "concurrently \"npm:copy:*\"",
    "copy:serveur": "shx cp -r app/{img,help,./*.txt} dist/serveur/",
    "copy:extension": "shx cp -r app/{img,help,js} dist/WebExtension/ && shx cp -r app/WebExtension/* dist/WebExtension",
    "copy:conf": "shx cp -r app/conf/WebExtension/ dist/WebExtension/conf/",
    "copy:boosted:css": "shx cp -r node_modules/boosted/dist/css/{boosted,orange-helvetica}.min.css docs/css/",
    "copy:boosted:fonts": "shx cp -r node_modules/boosted/dist/fonts/HelvNeue{55,75}_W1G.woff2 docs/fonts/",
    "postcopy": "shx cp -r dist/serveur/{css,fonts,img,help,./*.html} docs/",
    "prebuild:js": "shx mkdir -p dist/serveur/js",
    "build:js": "terser app/conf/serveur/hebergement.js app/js/variables.js app/js/ToolbarStrings.js app/js/UciUserPref.js app/conf/serveur/UciCookie.js app/js/lang-en.js app/js/lang-es.js app/js/lang-fr.js app/js/lang-pl.js app/js/UciAideMotrice.js app/js/UciCouleur.js app/js/UciApparence.js app/js/UciSettings.js app/js/UciTypographie.js app/js/UciValidation.js app/js/UciProfile.js app/js/UciIhm.js app/js/UciHelp.js app/js/mask.js app/js/toolbar.js app/conf/serveur/start.js -o dist/serveur/js/toolbar.js -o dist/serveur/js/toolbar.js -f \"preamble='/*\\n * $npm_package_name - version $npm_package_version - `date +%d-%m-%Y`\\n * $npm_package_config_description\\n * © 2014 - `date +%Y` $npm_package_config_author\\n*/'\"",
    "postbuild:js": "terser dist/serveur/js/toolbar.js -o dist/serveur/js/toolbar-min.js -c -m -f comments=true",
    "prebuild:css": "shx mkdir -p dist/WebExtension/css",
    "build:css": "postcss app/css/*.css --dir dist/serveur/css/ --no-map",
    "postbuild:css": "shx cp -r dist/serveur/css/*.css dist/WebExtension/css/",
    "build:html": "html-minifier-terser --file-ext html --input-dir app/ --output-dir dist/serveur --collapse-whitespace --conservative-collapse --remove-optional-tags --collapse-boolean-attributes --minify-js --minify-css --sort-attributes --sort-class-name",
    "watch": "concurrently --kill-others \"npm:watch:*\"",
    "watch:html": "nodemon --watch app --ext html --exec \"npm run build:html\"",
    "watch:css": "nodemon --watch app/css --ext css --exec \"npm run build:css\"",
    "watch:img": "nodemon --watch app/img --watch app/WebExtension/img --ext png,gif,jpg,webp,mp4 --exec \\\\\\\"npm run build:html\\\\\\\"",
    "watch:js": "nodemon --watch app --ext js --exec \"npm run build:js\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "boosted": "^5.0.2",
    "concurrently": "^7.5.0",
    "cssnano": "^5.1.14",
    "html-minifier-terser": "^7.0.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.18",
    "postcss-banner": "^4.0.1",
    "postcss-cli": "^10.0.0",
    "servor": "^4.0.2",
    "shx": "^0.3.4",
    "terser": "^5.16.0"
  }
}
