{
  "name": "orange-confort-plus",
  "description": "Enhance user experience on web sites",
  "version": "4.1.1",
  "homepage": "https://confort-plus.orange.com/",
  "author": "Orange SA",
  "contributors": [
    "Orange SA"
  ],
  "license": "GPL-2.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orange-OpenSource/Orange-Confort-plus.git"
  },
  "bugs": {
    "url": "https://github.com/Orange-OpenSource/Orange-Confort-plus/issues"
  },
  "scripts": {
    "start": "",
    "test": "",
    "prebuild": "shx rm -rf dist/{serveur,WebExtension}/*",
    "build": "npm run copy && npm run js:serveur",
    "docs": "",
    "copy": "concurrently \"npm:copy:*\"",
    "copy:serveur": "shx cp -r app/{images,css,fonts,help,./*.txt,./*.html} dist/serveur/",
    "copy:extension": "shx cp -r app/{images,css,help,js} dist/WebExtension/ && shx cp app/conf/WebExtension/start.js dist/WebExtension/js/",
    "copy:conf": "shx cp -r app/conf/WebExtension/ dist/WebExtension/conf/",
    "copy:data": "shx cp -r app/WebExtension/* dist/WebExtension/",
    "postcopy": "shx cp -r node_modules/boosted/dist/{css,fonts} dist/serveur/{css,fonts,images,./*.html} docs/",
    "prejs:serveur": "shx mkdir dist/serveur/js",
    "js:serveur": "terser app/conf/serveur/hebergement.js app/js/*.js app/conf/serveur/start.js -o dist/serveur/js/toolbar.js",
    "postjs:serveur": "terser dist/serveur/js/toolbar.js -o dist/serveur/js/toolbar-min.js -c -m"
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  },
  "devDependencies": {
    "boosted": "^5.0.2",
    "concurrently": "^7.5.0",
    "shx": "^0.3.4",
    "terser": "^5.15.1"
  }
}
